---
interface Props {
  title: string;
  description: string;
  isIndex?: boolean;
}

const { title, description, isIndex = false } = Astro.props;
const fullTitle = isIndex ? title : `${title} | Zhiyuan designed`;

import '../styles/fonts.css';
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{fullTitle}</title>
    <meta name="description" content={description}>
    <link rel="preload" href="/fonts/source-sans-pro-400-latin.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/source-serif-pro-600-latin.woff2" as="font" type="font/woff2" crossorigin>
  </head>
  <body class="bg-stone-100 text-stone-800 h-full max-w-4xl flex flex-col justify-between p-4 lg:p-8">
    <main id="main-content" class="mb-8 lg:mb-12">
      <slot />
    </main>
    <footer class="pb-8 text-sm">
      <div>2011 - {new Date().getFullYear()} Â© Zhiyuan</div>
      <div>Built with
        <a href="https://astro.build/" target="_blank" rel="noopener noreferrer">Astro</a>, hosted on
        <a href="https://workers.cloudflare.com/" target="_blank" rel="noopener noreferrer">Cloudflare Workers</a>, source at
        <a href="https://github.com/xmflsct/xmflsct-website" target="_blank" rel="noopener noreferrer">GitHub</a>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
